datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cart {
  cartItems   CartItem[]
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  orders      Order[]
  totalAmount Float?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model CartItem {
  cart      Cart?    @relation(fields: [cartId], references: [id])
  cartId    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  quantity  Int?
  updatedAt DateTime @updatedAt
}

model Order {
  cart          Cart?    @relation(fields: [cartId], references: [id])
  cartId        String?
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  paymentMethod String?
  updatedAt     DateTime @updatedAt
}

model Product {
  barcode     String?
  cartItems   CartItem[]
  createdAt   DateTime   @default(now())
  description String?
  id          String     @id @default(cuid())
  image       String?
  isActive    Boolean?
  name        String?
  price       Float?
  stock       Int?
  updatedAt   DateTime   @updatedAt
  variations  Json?
}

model User {
  carts       Cart[]
  createdAt   DateTime @default(now())
  email       String?  @unique
  firstName   String?
  id          String   @id @default(cuid())
  lastName    String?
  name        String?
  otp         Int?
  otpVerified Boolean?
  password    String
  phone       String?
  roles       Json
  updatedAt   DateTime @updatedAt
  username    String   @unique
}

model Discount {
  amount     Float?
  code       String?
  createdAt  DateTime  @default(now())
  expiryDate DateTime?
  id         String    @id @default(cuid())
  isActive   Boolean?
  updatedAt  DateTime  @updatedAt
}
